.task
  %p
    = f.label :name, "Task:"
    = f.text_field :name

    = f.label :raise_exception, "Raise exception:"
    = f.check_box :raise_exception
    = remove_link_unless_new_record(f)

  .colors
    - @color = f.object.colors.empty? ? f.object.colors.build : f.object.colors
    - f.fields_for :colors, @color do |color_form|
      = render :partial => 'color', :locals => { :f => color_form }

  = link_to 'Add a color', '#color', :class => "add_nested_item_lvl2", :rel => "[task][colors]"
